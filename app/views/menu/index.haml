          %label{for: "right-label"}= image_tag "icons/budget.svg"
        .sidebar-accordian
          Budget
    .row
      %a{href: "#"}
        .label-icon.budget
          %label{for: "right-label"}= image_tag "icons/meal.svg"
        .sidebar-accordian
          Meal Period
    .row
      %a{href: "#"}
        .label-icon.budget
          %label{for: "right-label"}= image_tag "icons/restrictions.svg"
        .sidebar-accordian
          Dietary Restrictions
    .row
      %a{href: "#"}
        .label-icon.budget
          %label{for: "right-label"}= image_tag "icons/tags.svg"
        .sidebar-accordian
          Food Tags
    .row
      %a{href: "#"}
        .label-icon.budget
