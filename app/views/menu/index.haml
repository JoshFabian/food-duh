.l-sidebar
  .fooda-logo
    = link_to "#" do
      = image_tag "logo.png", :class => "logo-img"
  .event-details
    %h6.sidebar-title Your Event Details
    .row
      .label-icon
        %label{for: "right-label"}= image_tag "icons/location.svg"
      .sidebar-input
        %input#right-label{placeholder: "Zip Code (optional)", type: "text"}
    .row
      .label-icon
        %label{for: "right-label"}= image_tag "icons/guests.svg"
      .sidebar-input
        %input#right-label{placeholder: "Number of Guests (required)", type: "text"}
    .row.collapse
      .label-icon.date
        %label{for: "right-label"}= image_tag "icons/date.svg"
      .postfix-input
        %input{placeholder: "Date (required)", type: "text"}
      .postfix-span
        %span.postfix.radius <i class="fa fa-calendar"></i> 
    .row.collapse
      .label-icon
        %label{for: "right-label"}= image_tag "icons/time.svg"
      .postfix-input
        %input{placeholder: "Time (required)", type: "text"}
      .postfix-span
        %span.postfix.radius <i class="fa fa-clock-o"></i>

  .menu-filters
